<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="rtl_RecyclerTabLayout">
        <attr name="rtl_tabIndicatorColor" format="color"/>
        <attr name="rtl_tabIndicatorHeight" format="dimension"/>
        <attr name="rtl_tabIndicatorWidth" format="dimension"/>
        <attr name="rtl_tabIndicatorLeftRightPadding" format="dimension"/>
        <attr name="rtl_tabBackground" format="reference"/>

        <attr name="rtl_tabTextAppearance" format="reference"/>
        <attr name="rtl_tabSelectedTextColor" format="color"/>

        <attr name="rtl_tabOnScreenLimit" format="integer"/>
        <attr name="rtl_tabMinWidth" format="dimension"/>
        <attr name="rtl_tabMaxWidth" format="dimension"/>
        <attr name="rtl_tabIndicatorCorner" format="dimension"/>
        <attr name="rtl_tabIndicatorRoundOffset" format="dimension"/>

        <attr name="rtl_tabPaddingStart" format="dimension"/>
        <attr name="rtl_tabPaddingTop" format="dimension"/>
        <attr name="rtl_tabPaddingEnd" format="dimension"/>
        <attr name="rtl_tabPaddingBottom" format="dimension"/>
        <attr name="rtl_tabPadding" format="dimension"/>

        <attr name="rtl_scrollEnabled" format="boolean"/>
        <attr name="rtl_isTabIndicatorRound" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="RippleLayout">
        <attr name="rl_rippleColor" format="color" localization="suggested" />
        <attr name="rl_rippleDimension" format="dimension" localization="suggested" />
        <attr name="rl_rippleOverlay" format="boolean" localization="suggested" />
        <attr name="rl_rippleAlpha" format="float" localization="suggested" />
        <attr name="rl_rippleDuration" format="integer" localization="suggested" />
        <attr name="rl_rippleFadeDuration" format="integer" localization="suggested" />
        <attr name="rl_rippleHover" format="boolean" localization="suggested" />
        <attr name="rl_rippleBackground" format="color" localization="suggested" />
        <attr name="rl_rippleDelayClick" format="boolean" localization="suggested" />
        <attr name="rl_ripplePersistent" format="boolean" localization="suggested" />
        <attr name="rl_rippleInAdapter" format="boolean" localization="suggested" />
        <attr name="rl_rippleRoundedCorners" format="dimension" localization="suggested" />
    </declare-styleable>

</resources>